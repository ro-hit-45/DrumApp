<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#010E05"
    android:padding="20dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="130dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="116dp"
            android:layout_height="123dp"
            android:background="@drawable/button2"
            android:onClick="playmusic1"
            tools:ignore="SpeakableTextPresentCheck"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button2"
            android:layout_width="114dp"
            android:layout_height="123dp"
            android:background="@drawable/button3"
            android:onClick="playmusic2"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button3"
            android:layout_width="105dp"
            android:layout_height="125dp"
            android:background="@drawable/button2"
            android:onClick="playmusic3"
            tools:ignore="SpeakableTextPresentCheck"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="130dp">


        <Button
            android:id="@+id/button4"
            android:layout_width="116dp"
            android:layout_height="123dp"
            android:background="@drawable/button4"
            android:onClick="playmusic4"
            tools:ignore="SpeakableTextPresentCheck" />


        <Button
            android:id="@+id/button5"
            android:layout_width="114dp"
            android:layout_height="123dp"
            android:background="@drawable/button5"
            android:onClick="playmusic5"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button6"
            android:layout_width="105dp"
            android:layout_height="125dp"
            android:background="@drawable/button4"
            android:onClick="playmusic6"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="130dp">

        <Button
            android:id="@+id/button7"
            android:layout_width="116dp"
            android:layout_height="123dp"
            android:background="@drawable/button1"
            android:onClick="playmusic7"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button8"
            android:layout_width="114dp"
            android:layout_height="123dp"
            android:background="@drawable/button3"
            android:onClick="playmusic8"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button9"
            android:layout_width="105dp"
            android:layout_height="125dp"
            android:background="@drawable/button1"
            android:onClick="playmusic9"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>


</LinearLayout>

